
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>大学生志愿服务认证中心</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/oj/css/admin.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-table/bootstrap-table.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-table/bootstrap-table-filter-control.css" rel="stylesheet" />


</head>

<body>
    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>添加
        </button>
        <a href="/OrganizeInfo/ExportExcel" class="btn btn-default">
            <span class="glyphicon glyphicon-open" aria-hidden="true"></span>数据导出
        </a>
    </div>
    <div>
        <table id="tb_organize" data-filter-control="true"></table>
    </div>
    <script src="~/Content/oj/js/jquery-1.12.4.js"></script>
    <script src="~/Scripts/bootstrap-table.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Content/oj/js/admin.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table-filter-control.js"></script>
    <script type="text/javascript">
        $(function () {
            //初始化表格
            initTable();
            $("#btn_add").on('click', function () {
                layer.open({
                    type: 2,
                    content: "/OrganizeInfo/Create",
                    title: '添加团队',
                    shadeClose: true,
                    area: ['800px', '400px'],
                });
            });
        });

        function initTable(queryParam) {
            $('#tb_organize').bootstrapTable({
                contentType: "application/x-www-form-urlencoded",
                url: '/OrganizeInfo/GetAllOrganizeInfo',
                method: 'post',
                toolbar: '#toolbar',
                striped: true,
                cache: false,
                pagination: true,
                queryParams: function (param) {
                    return param;
                },
                sidePagination: "server",
                pageNumber: 1,
                pageSize: 10,
                pageList: [10, 20, 50],
                smartDisplay: false,
                showColumns: true,
                showRefresh: true,
                minimumCountColumns: 3,
                clickToSelect: true,
                uniqueId: "OrganizeInfoID",
                columns: [
                    {
                        field: 'OrganizeInfoID',
                        title: '团队编号',
                        visible: false,
                        align: 'center',
                        width: '6%',
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoLoginId',
                        title: '团队用户名',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoShowName',
                        title: '团队名称',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoPeople',
                        title: '负责人',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoPhone',
                        title: '手机号',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["OrganizeInfoPhone"] == null) {
                                return '未填写';
                            }
                            return value;
                        },
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoEmail',
                        title: '邮箱',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["OrganizeInfoEmail"] == null) {
                                return '未填写';
                            }
                            return value;
                        },
                        filterControl: 'input',
                    },
                    {
                        field: 'ActivityCount',
                        title: '志愿者活动数目',
                        visible: false,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["ActivityCount"] == null) {
                                return '0';
                            }
                            return value;
                        },
                        filterControl: 'input',
                    },
                    {
                        field: 'CreateTime',
                        title: '团队创建时间',
                        visible: false,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                        formatter: function (value, row, index) {
                            if (value == null)
                                return null;
                            else
                                return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'OrganizeInfoLastTime',
                        title: '最后登录时间',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                        formatter: function (value, row, index) {
                            if (value == null)
                                return null;
                            else
                                return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'Status',
                        title: '状态',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["Status"] == 2) {
                                return '未审核';
                            } else if (row["Status"] == 1) {
                                return '已删除';
                            } else if (row["Status"] == 0) {
                                return '正常'
                            }
                        },
                        filterControl: 'input',
                    }
                ],
                onDblClickRow: function (row, $element) {
                    var index = layer.open({
                        type: 2,
                        title: '团队详情',
                        maxmin: false,
                        shadeClose: true,
                        closeBtn: 1,
                        area: ['1000px', '680px'],
                        content: '/OrganizeInfo/OrganizeDetail/' + row["OrganizeInfoID"],
                    });
                }
            });
        };

    </script>
</body>
</html>




