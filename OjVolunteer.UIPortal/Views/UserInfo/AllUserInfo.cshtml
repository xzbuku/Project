<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>大学生志愿服务认证中心</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">


    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/oj/css/admin.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-table/bootstrap-table.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-table/bootstrap-table-filter-control.css" rel="stylesheet" />
</head>
<body>
    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>添加
        </button>
        <a href="/UserInfo/ExportExcel" class="btn btn-default">
            <span class="glyphicon glyphicon-open" aria-hidden="true"></span>数据导出
        </a>
    </div>
    <div>
        <table id="tb_user" data-filter-control="true"></table>
    </div>

    <script src="~/Content/oj/js/jquery-1.12.4.js"></script>
    <script src="~/Scripts/bootstrap-table.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Content/oj/js/admin.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table-filter-control.js"></script>

    <script type="text/javascript">
        $(function () {
            initTable();

            $("#btn_add").click(function (data) {
                var index = layer.open({
                    type: 2,
                    title: false,
                    closeBtn: 0,
                    maxmin: false,
                    shadeClose: true,
                    area: ['800px', '400px'],
                    content: '/UserInfo/Create/'
                });
            });

        });

        function initTable(queryParam) {
            $('#tb_user').bootstrapTable({
                contentType: "application/x-www-form-urlencoded",
                url: '/UserInfo/GetAllUserInfo',
                method: 'post',
                toolbar: '#toolbar',
                striped: true,
                cache: false,
                pagination: true,
                queryParams: function (param) {
                    return param;
                },
                sidePagination: "server",
                pageNumber: 1,
                pageSize: 10,
                pageList: [ 10, 20, 50],
                smartDisplay: false,
                showColumns: true,
                showRefresh: true,
                minimumCountColumns: 3,
                clickToSelect: true,
                uniqueId: "UserInfoID",
                columns: [
                    {
                        field: 'UserInfoStuId',
                        title: '学号',
                        visible: false,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'UserInfoShowName',
                        title: '真实姓名',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'UserInfoPhone',
                        title: '手机号',
                        visible: false,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'UserInfoEmail',
                        title: '邮箱',
                        visible: false,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'PoliticalName',
                        title: '政治面貌',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'MajorName',
                        title: '专业',
                        visible: true,
                        width: '10%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'DepartmentName',
                        title: '学院',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoShowName',
                        title: '所属团队',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'UserInfoTalkCount',
                        title: '心得数目',
                        visible: true,
                        width: '4%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["UserInfoTalkCount"] == null) {
                                return '0';
                            }
                            return value;
                        },
                        filterControl: 'input',
                    },
                    {
                        field: 'UserDurationNormalTotal',
                        title: '普通活动时长',
                        visible: false,
                        width: '10%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'UserDurationPropartyTotal',
                        title: '预备党员时长',
                        visible: false,
                        width: '10%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'UserDurationPartyTotal',
                        title: '党员时长',
                        visible: false,
                        width: '10%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'UserDurationTotal',
                        title: '志愿者服务总时长',
                        visible: true,
                        width: '10%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'UserInfoLastTime',
                        title: '最后登录时间',
                        visible: false,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'Status',
                        title: '状态',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["Status"] == 2) {
                                return '未审核';
                            } else if (row["Status"] == 1) {
                                return '已删除';
                            } else if (row["Status"] == 0) {
                                return '正常'
                            }
                        },
                        filterControl: 'input',
                    }
                ],
                onDblClickRow: function (row, $element) {
                    var index = layer.open({
                        type: 2,
                        title: false,
                        closeBtn: 0,
                        maxmin: false,
                        shadeClose: true,
                        area: ['800px', '830px'],
                        content: '/UserInfo/OrgEditUser/' + row["UserInfoID"],
                    });
                }
            });
        };


    </script>
</body>
</html>






